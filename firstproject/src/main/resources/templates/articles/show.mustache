{{>layouts/header}}
<table class="table">
    <thead>
    <tr>

        <th scope="col">제목</th>
        <th scope="col">내용</th>
        <th scope="col">기한</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>

            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{date}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>
<button onclick="location.href='/articles/{{article.id}}/edit'" class="btn btn-primary">수정</button>
<button onclick="location.href='/articles/{{article.id}}/delete'" class="btn btn-danger">삭제</button>
<button onclick="location.href='/articles'" class="btn btn-info">목록</button>

{{>layouts/footer}}
